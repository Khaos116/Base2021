<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >
  <!--亮度-->
  <LinearLayout
      android:id="@+id/gesture_bright_view"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:background="@drawable/shape_video_loading_bg"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"
      >

    <ImageView
        android:id="@+id/gesture_bright_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@drawable/svg_media_bright_add"
        />

    <TextView
        android:id="@+id/gesture_bright_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/media_video_error_retry"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/media_video_gesture"
        android:textSize="15sp"
        tools:text="50%"
        />
  </LinearLayout>
  <!--音量-->
  <LinearLayout
      android:id="@+id/gesture_volume_view"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:background="@drawable/shape_video_loading_bg"
      android:gravity="center"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:paddingTop="10dp"
      android:paddingEnd="15dp"
      android:paddingBottom="10dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"
      >

    <ImageView
        android:id="@+id/gesture_volume_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@drawable/svg_media_volume_add"
        />

    <TextView
        android:id="@+id/gesture_volume_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/media_video_error_retry"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/media_video_gesture"
        android:textSize="15sp"
        tools:text="50%"
        />
  </LinearLayout>
  <!--进度-->
  <LinearLayout
      android:id="@+id/gesture_seek_view"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:background="@drawable/shape_video_loading_bg"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"
      >

    <TextView
        android:id="@+id/gesture_seek_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/media_video_error_retry"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/media_video_gesture"
        android:textSize="15sp"
        tools:text="+35s"
        />

    <TextView
        android:id="@+id/gesture_seek_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/media_video_error_retry"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@color/media_video_gesture"
        android:textSize="12sp"
        tools:text="00:00:25/00:05:35"
        />
  </LinearLayout>
</merge>