<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="DiscreteBanner">
    <attr name="dsv_orientation" format="enum">
      <enum name="horizontal" value="0"/>
      <enum name="vertical" value="1"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="DotsIndicator">
    <attr name="dots_count" format="integer"/>
    <attr name="selected_dot_scale_factor" format="float"/>
    <attr name="selected_dot_resource" format="reference"/>
    <attr name="unselected_dot_resource" format="reference"/>
    <attr name="first_selected_dot_resource" format="reference"/>
    <attr name="first_unselected_dot_resource" format="reference"/>
    <attr name="dot_size" format="dimension"/>
    <attr name="last_dot_size" format="dimension"/>
    <attr name="margins_between_dots" format="dimension"/>
  </declare-styleable>
</resources>